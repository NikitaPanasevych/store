// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Post {
  id      String @id @default(cuid())
  title   String
  content String
  image   String
}

model Product {
  id          String  @id @default(cuid())
  name        String
  price       Float
  image       String
  description String
  year        Int
  alcohol     Float
  quantity    Int
  volume      Float
  category    Type    @relation(fields: [categoryId], references: [id])
  categoryId  String
  country     Country @relation(fields: [countryId], references: [id])
  countryId   String
  grape       Grape   @relation(fields: [grapeId], references: [id])
  grapeId     String
}

model Type {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model Country {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model Grape {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}
